{
  "name": "mpremote",
  "displayName": "MPRemote",
  "description": "Command palette access for MicroPython mpremote",
  "icon": "images/snake.png",
  "publisher": "DavesCodeMusings",
  "version": "1.20.9",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DavesCodeMusings/mpremote-vscode.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mpremote.cat",
        "title": "Show file contents (cat)",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.chdir",
        "title": "Change remote working directory (chdir)",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.devs",
        "title": "Scan for attached devices (devs)",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.download",
        "title": "Download file from remote filesystem",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.ls",
        "title": "List files on remote filesystem (ls)",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.mkdir",
        "title": "Make new directory (mkdir)",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.upload",
        "title": "Upload file to remote filesystem (cp)",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.mipinstall",
        "title": "Install package on device (mip)",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.repl",
        "title": "Enter REPL prompt (repl)",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.reset",
        "title": "Reset device (reset)",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.disconnect",
        "title": "Disconnect from device (disconnect)",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.rm",
        "title": "Remove file from remote filesystem (rm)",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.rmdir",
        "title": "Remove directory from remote filesystem (rmdir)",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.run",
        "title": "Run file shown in the active editor (run)",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.setrtc",
        "title": "Set realtime clock to match host date-time (setrtc)",
        "category": "MPRemote"
      },
      {
        "command": "mpremote.sync",
        "title": "Upload all project files to remote filesystem (sync)",
        "category": "MPRemote"
      }
    ],
    "submenus": [
      {
        "id": "mpremote.editorContextSubMenu",
        "label": "MPRemote",
        "when": "resourceLangId == python"
      },
      {
        "id": "mpremote.explorerContextSubMenu",
        "label": "MPRemote",
        "when": "resourceLangId == python"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "mpremote.editorContextSubMenu",
          "group": "mpremote",
          "when": "resourceLangId == python"
        }
      ],
      "mpremote.editorContextSubMenu": [
        {
          "command": "mpremote.chdir"
        },
        {
          "command": "mpremote.repl"
        },
        {
          "command": "mpremote.run"
        },
        {
          "command": "mpremote.upload"
        }
      ],
      "explorer/context": [
        {
          "submenu": "mpremote.explorerContextSubMenu",
          "group": "mpremote",
          "when": "resourceLangId == python"
        }
      ],
      "mpremote.explorerContextSubMenu": [
        {
          "command": "mpremote.repl"
        },
        {
          "command": "mpremote.sync"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mpremoteViewContainer",
          "title": "MPRemote",
          "icon": "images/snake.svg"
        }
      ]
    },
    "views": {
      "mpremoteViewContainer": [
        {
          "id": "mpremote.gettingStarted",
          "name": "Getting Started"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "mpremote.gettingStarted",
        "contents": "Start by opening the folder containing your MicroPython code.\n[$(folder) Open Folder](command:vscode.openFolder)\nEdit as needed, then recursively upload all your project files to the microcontroller.\n[$(refresh) Sync $(arrow-up)](command:mpremote.sync)\nFinally, start a REPL prompt and reset your microcontroller to observe debug output.\n[REPL >>>](command:mpremote.repl)\nLearn more about how to use this extension by visiting the [project wiki](https://github.com/DavesCodeMusings/mpremote-vscode/wiki)."
      }
    ],
    "configuration": {
      "title": "MPRemote",
      "properties": {
        "mpremote.serialPort.skip": {
          "type": "string",
          "default": null,
          "description": "For serial ports that are present on the development host, but will never have a microcontroller attached. Enter them here to avoid erroneous detection. Use commas to separate multiple ports."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "serialport": "^10.4.0"
  }
}
