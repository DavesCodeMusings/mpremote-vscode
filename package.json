{
  "name": "mpremote",
  "displayName": "MPRemote",
  "description": "Command palette access for MicroPython mpremote",
  "icon": "images/snake.png",
  "publisher": "DavesCodeMusings",
  "version": "1.20.3",
  "engines": {
    "vscode": "^1.73.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DavesCodeMusings/mpremote-vscode.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mpremote.cat",
    "onCommand:mpremote.chdir",
    "onCommand:mpremote.devs",
    "onCommand:mpremote.download",
    "onCommand:mpremote.ls",
    "onCommand:mpremote.mkdir",
    "onCommand:mpremote.upload",
    "onCommand:mpremote.repl",
    "onCommand:mpremote.mipinstall",
    "onCommand:mpremote.disconnect",
    "onCommand:mpremote.rm",
    "onCommand:mpremote.rmdir",
    "onCommand:mpremote.run",
    "onCommand:mpremote.sync"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mpremote.cat",
        "title": "MPRemote: Show file contents (cat)"
      },
      {
        "command": "mpremote.chdir",
        "title": "MPRemote: Change remote working directory (chdir)"
      },
      {
        "command": "mpremote.devs",
        "title": "MPRemote: Scan for attached devices (devs)"
      },
      {
        "command": "mpremote.download",
        "title": "MPRemote: Download file from remote filesystem"
      },
      {
        "command": "mpremote.ls",
        "title": "MPRemote: List files on remote filesystem (ls)"
      },
      {
        "command": "mpremote.mkdir",
        "title": "MPRemote: Make new directory (mkdir)"
      },
      {
        "command": "mpremote.upload",
        "title": "MPRemote: Upload file to remote filesystem (cp)"
      },
      {
        "command": "mpremote.mipinstall",
        "title": "MPRemote: Install package on device (mip)"
      },
      {
        "command": "mpremote.repl",
        "title": "MPRemote: Enter REPL prompt (repl)"
      },
      {
        "command": "mpremote.disconnect",
        "title": "MPRemote: Disconnect from device (disconnect)"
      },
      {
        "command": "mpremote.rm",
        "title": "MPRemote: Remove file from remote filesystem (rm)"
      },
      {
        "command": "mpremote.rmdir",
        "title": "MPRemote: Remove directory from remote filesystem (rmdir)"
      },
      {
        "command": "mpremote.run",
        "title": "MPRemote: Run file shown in the active editor (run)"
      },
      {
        "command": "mpremote.sync",
        "title": "MPRemote: Upload project files to remote filesystem (sync)"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "serialport": "^10.4.0"
  }
}
